<p id="notice"><%= notice %></p>
<%= gravatar_for user, size: 50 %>
<%= link_to user.name, user %>
<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Password</th>
      <th>Password confirmation</th>
      <th>Name</th>
      <th>Address</th>
      <th>Postal cod</th>
      <th>Locality</th>
      <th>Contact</th>
      <th>Identity card</th>
      <th>Professional area</th>
      <th>Presentation</th>
      <th>Level of qualifications</th>
      <th>Literary abilities</th>
      <th>Professional situation</th>
      <th>Professional expirience</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.password_confirmation %></td>
        <td><%= user.name %></td>
        <td><%= user.address %></td>
        <td><%= user.postal_cod %></td>
        <td><%= user.locality %></td>
        <td><%= user.contact %></td>
        <td><%= user.identity_card %></td>
        <td><%= user.professional_area %></td>
        <td><%= user.presentation %></td>
        <td><%= user.level_of_qualifications %></td>
        <td><%= user.literary_abilities %></td>
        <td><%= user.professional_situation %></td>
        <td><%= user.professional_expirience %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>


