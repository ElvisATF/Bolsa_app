<div class="row">
    <div class="col-md-6 col-md-offset-3">

<%= form_with(model: user, local: true) do |f| %>
  <%= render 'shared/eror_messages' %>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name , class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_area :address , class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :postal_cod %>
    <%= f.text_field :postal_cod, class: 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :locality %>
    <%= f.text_field :locality, class: 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :contact %>
    <%= f.text_field :contact, class: 'form-control'  %>
  </div>

  <div class="field">
    <%= f.label :identity_card %>
    <%= f.text_field :identity_card , class: 'form-control' %>
  </div>


   <div class="field">
      <%= f.label :professional_area   %>
      <%= f.select :professional_area , ['Engenharia','Medecina','Economia','Politica'] %>
    </div>

  <div class="field">
    <%= f.label :presentation %>
    <%= f.text_area :presentation, class: 'form-control'  %>
  </div>

   <div class="field">
      <%= f.label :level_of_qualifications   %>
      <%= f.select :level_of_qualifications , ['Diploma Universitario','12º Ano','Formação Profissional','Mestrado'] %>
      </div>



  <div class="field">
    <%= f.label :literary_abilities %>
    <%= f.text_area :literary_abilities, class: 'form-control'  %>
  </div>



   <div class="field">
      <%= f.label :professional_situation  %>
      <%= f.select :professional_situation , ['Empreado','Desempregado','Estudante'] %>
      </div>

  <div class="field">
    <%= f.label :experiencia_profissional%>
    <%= f.text_area :professional_expirience , class: 'form-control' %>
  </div>

  <div >
    <%= f.submit "Create User", class:"actions btn btn-primary"%>
  </div>
<% end %>
</div>
</div>
