<%= form_with(model: user, local: true) do |f| %>
  <%= render 'shared/eror_messages' %>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_area :address %>
  </div>

  <div class="field">
    <%= f.label :postal_cod %>
    <%= f.text_field :postal_cod %>
  </div>

  <div class="field">
    <%= f.label :locality %>
    <%= f.text_field :locality %>
  </div>

  <div class="field">
    <%= f.label :contact %>
    <%= f.number_field :contact %>
  </div>

  <div class="field">
    <%= f.label :identity_card %>
    <%= f.text_field :identity_card %>
  </div>

  <div class="field">
    <%= f.label :professional_area %>
    <%= f.text_field :professional_area %>
  </div>

  <div class="field">
    <%= f.label :presentation %>
    <%= f.text_area :presentation %>
  </div>

  <div class="field">
    <%= f.label :level_of_qualifications %>
    <%= f.text_field :level_of_qualifications %>
  </div>

  <div class="field">
    <%= f.label :literary_abilities %>
    <%= f.text_field :literary_abilities %>
  </div>

  <div class="field">
    <%= f.label :professional_situation %>
    <%= f.text_field :professional_situation %>
  </div>

  <div class="field">
    <%= f.label :professional_expirience %>
    <%= f.text_field :professional_expirience %>
  </div>

  <div >
    <%= f.submit "Create User", class:"actions btn btn-primary"%>
  </div>
<% end %>
