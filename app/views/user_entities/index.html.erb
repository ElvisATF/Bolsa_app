<% provide(:title, 'All Entities') %>
<h1>All Entities</h1>

<%= will_paginate @user_entity%>

<ul class="users">
<% @user_entity.each do |user_entity| %>
<li>
<%= gravatar_for user_entity, size: 50%>
<%= link_to user_entity.name, user_entity %>
<% if current_user.admin? && !current_entity?(user_entity) %>
| <%= link_to "delete", user_entity, method: :delete,
data: { confirm: "You sure?" } %>
<% end %>
</li>
<% end %>
<% if !current_user.nil? %>
<%= link_to "Insert Offers", insert_offer_path, class: "btn btn-primary" %>
<%end%>
</ul>
<%= will_paginate @user_entity%>

