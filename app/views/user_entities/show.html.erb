<% provide(:title, @user_entity.name) %>

<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
		<h1>
			<%= gravatar_for @user_entity %>
			<%= image_tag @user_entity.display_image if @user_entity.image.attached? %>
			<%= @user_entity.name %>
		</h1>
	<% if logged_in? %>
		<% if current_user_user.nil?%>
			<%= link_to "Edit Data", edit_user_entity_path(current_user), class: "btn btn-lg btn-primary btn-xs" %>
			<%= link_to "Change Password", '#', class: "btn btn-lg btn-primary btn-xs" %>
			<% if !current_user.nil? %>
		<%= link_to "Insert Offers", insert_offer_path, class: "btn btn-primary" %>
		<%end%>
		<%end%>
		</section >
	   <section class="stats">
		<%= render 'shared/stats' %>
	   </section>
	</aside>
	<div class="col-md-8">
	 <%= render 'follow_form' if logged_in? %>
	    <% if @user_entity.offers.any? %>
			<h3>Offers (<%= @user_entity.offers.count %>)</h3>
			<ol class="offers">
			<%= render @offers %>
			</ol>
			<%= will_paginate @offers %>
		<% end %>
		<%else%>
		 <%= redirect_to newsession_url %>
	<% end%>
	</div>
</div>

